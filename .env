# Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production as needed

# Environment Selection
VITE_ENVIRONMENT=development

# API URLs for each environment
VITE_DEVELOPMENT_API_URL=http://localhost:7004/api
VITE_STAGING_API_URL=https://staging-api.yourdomain.com/api
VITE_PRODUCTION_API_URL=https://api.yourdomain.com/api

# Azure Functions Configuration (for fallback)
VITE_AZURE_FUNCTIONS_URL=https://your-azure-functions.azurewebsites.net/api
VITE_AZURE_FUNCTIONS_API_KEY=your-api-key

# Performance Configuration
VITE_API_TIMEOUT=30000
VITE_CACHE_DURATION=300000
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_BACKOFF_DELAY=1000

# Feature Flags
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_AUTO_REFRESH=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_CACHING=true
VITE_ENABLE_RETRY_LOGIC=true
VITE_ENABLE_CIRCUIT_BREAKER=true

# Environment specific flags
VITE_USE_AZURE_FUNCTIONS=false
VITE_DEBUG_MODE=true
